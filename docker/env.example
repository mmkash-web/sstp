# SSTP VPN Server Environment Variables
# Copy this file to .env and update the values

# Required: VPN credentials
VPN_USER=vpnuser
VPN_PASS=vpnpass

# Required: VPS public IP address
VPS_PUBLIC_IP=203.0.113.1

# Optional: VPN subnet (default: 10.10.10.0/24)
VPN_SUBNET=10.10.10.0/24

# Optional: DNS servers
DNS1=1.1.1.1
DNS2=8.8.8.8

# Optional: Additional users (comma-separated)
# Format: username:password:ip
ADDITIONAL_USERS=user1:pass1:10.10.10.3,user2:pass2:10.10.10.4

# Optional: API port forwarding
# Set to enable port forwarding for MikroTik API access
API_PORT_FORWARDING=false
API_PORT=8728
ADMIN_IP=203.0.113.100
